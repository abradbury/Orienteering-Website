<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
	<name>SYO</name>
	<creationDate>2015-08-10</creationDate>
	<author>A. Bradbury</author>
	<authorUrl>https://www.southyorkshireorienteers.org.uk</authorUrl>
	<copyright>South Yorkshire Orienteers 2023</copyright>
	<version>3.0.5</version>
	<description>A Joomla template created for the South Yorkshire Orienteers' website</description>

	<files>
		<filename>index.php</filename>
		<filename>error.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
		<folder>language</folder>
	</files>

	<media destination="templates/site/syo" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>svg</folder>
		<folder>images</folder>
		<folder>webfonts</folder>
	</media>

	<positions>
		<position>browser_warning</position>
		<position>breadcrumb</position>
		<position>newsflash</position>
		<position>login</position>
		<position>logout</position>
		<position>menu</position>
		<position>banner</position>
		<position>events</position>
		<position>results</position>
		<position>about_left</position>
		<position>right</position>
		<position>right_mobile</position>
		<position>bottom_right</position>
		<position>footer_left</position>
		<position>footer_right</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_syo.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_syo.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="SYO_Social">
				<field name="facebookURL" class="" type="url" default=""
					label="TPL_SYO_FACEBOOK_LABEL"
					description="TPL_SYO_FACEBOOK_DESC" />
 
				<field name="twitterURL" class="" type="url" default=""
					label="TPL_SYO_TWITTER_LABEL"
					description="TPL_SYO_TWITTER_DESC" />
 
				<field name="flickrURL" class="" type="url" default=""
					label="TPL_SYO_FLICKR_LABEL"
					description="TPL_SYO_FLICKR_DESC" />

				<field name="instagramURL" class="" type="url" default=""
					label="TPL_SYO_INSTAGRAM_LABEL"
					description="TPL_SYO_INSTAGRAM_DESC" />

				<field name="stravaURL" class="" type="url" default=""
					label="TPL_SYO_STRAVA_LABEL"
					description="TPL_SYO_STRAVA_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>